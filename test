function Ap.Balls()
    local Balls = {}
    local part_zoomies = nil
    
    local training_balls = workspace:FindFirstChild("TrainingBalls")
    if training_balls and training_balls:IsA("BasePart") then
        part_zoomies = training_balls:GetAttribute("zoomies")
    end

    for _, ball in pairs(workspace:WaitForChild("Balls"):GetChildren()) do
        if ball:IsA("BasePart") and ball:GetAttribute("realBall") then
            table.insert(Balls, ball)
            if #Balls == 2 then
                break
            end
        end
    end

    return Balls, part_zoomies
end
